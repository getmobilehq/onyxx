{
  "name": "onyx-backend",
  "version": "1.0.0",
  "description": "Backend API for Onyx Building Assessment Platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "node dist/utils/migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "knex:migrate:latest": "npx knex migrate:latest --knexfile knexfile.ts",
    "knex:migrate:rollback": "npx knex migrate:rollback --knexfile knexfile.ts",
    "knex:migrate:make": "npx knex migrate:make --knexfile knexfile.ts",
    "knex:migrate:status": "npx knex migrate:status --knexfile knexfile.ts",
    "migrate": "npx tsx src/database/migrate.ts",
    "migrate:status": "npm run migrate status",
    "migrate:up": "npm run migrate up",
    "migrate:rollback": "npm run migrate rollback",
    "migrate:history": "npm run migrate history",
    "migrate:dry-run": "npm run migrate up --dry-run",
    "validate:data": "npx tsx src/validation/data-integrity.ts",
    "validate:check": "npm run validate:data check",
    "validate:fix": "npm run validate:data fix",
    "fix:orphaned-users": "npx tsx scripts/fix-orphaned-users.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "postgresql",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^10.0.0",
    "@sentry/profiling-node": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-mongo-sanitize": "^1.3.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.13.9",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mailgun.js": "^9.4.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.4",
    "pdfkit": "^0.14.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "typescript": "^5.3.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/knex": "^0.15.2",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}
