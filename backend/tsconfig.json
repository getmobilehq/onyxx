{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "incremental": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "src/continuous-improvement/**/*",
    "src/monitoring/**/*", 
    "src/validation/**/*",
    "src/recovery/**/*",
    "src/prevention/**/*",
    "src/alerting/**/*",
    "src/incident/**/*",
    "src/database/migrate.ts",
    "src/logging/advanced-logger.ts",
    "src/middleware/validation.middleware.ts",
    "src/resilience/**/*",
    "src/routes/health-dashboard.ts",
    "src/scripts/**/*"
  ]
}